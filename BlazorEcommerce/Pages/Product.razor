                <div class="container">
                    <div class="row ps-5 ">

                        <h3 class="product-name mb-3 ">@product.name</h3>
                        <p class="product-description border-bottom pb-4 ">@product.description</p>

                        <h4 class="col-2 product-price mt-2 ">@product.price</h4>
                        <div class="col-6 ">
                            
                            <InputNumber @bind-Value="product.ProductAmount" />
                        </div>
                        <span class="border-bottom pt-3"></span>
                        <div class="col-12">
                        <button class="mybtn mybtn--primary" type="submit" @onclick="() => AddToCart(product)">Add to Cart</button>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

